<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_lot_barcode_wizard_form" model="ir.ui.view">
            <field name="name">stock.lot.barcode.wizard.form</field>
            <field name="model">stock.lot.barcode.wizard</field>
            <field name="arch" type="xml">
                <form string="Choose Labels Layout">
                    <group>
                        <group>
                            <field name="product_tmpl_id" readonly="1" />
                            <field name="lot_id" options="{'no_create': True}" />
                        </group>
                        <group>
                            <field name="format" widget="radio" />
                        </group>
                    </group>
                    <footer>
                        <button string="Confirm" type="object" name="action_print"
                            class="btn-primary" />
                        <button string="Discard" special="cancel" class="btn-secondary" />
                    </footer>
                </form>
            </field>
        </record>
        <!-- Open-in-dialog action for the wizard -->
        <record id="action_open_lot_barcode_wizard" model="ir.actions.act_window">
            <field name="name">Print Lot Barcodes</field>
            <field name="res_model">stock.lot.barcode.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <!-- Pre-fill the wizard with the current product -->
            <field name="context">{'default_product_tmpl_id': active_id}</field>
        </record>


    </data>
</odoo>